# MangaForge Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Database Configuration
# ===========================================
DB_USER=mangaforge
DB_PASSWORD=your_secure_password_here
DB_NAME=mangaforge

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# MinIO Object Storage
# ===========================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_USER=mangaforge
RABBITMQ_PASSWORD=your_rabbitmq_password

# ===========================================
# LLM API Keys
# ===========================================
LLM_PROVIDER=anthropic  # or openai
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ===========================================
# Application Security
# ===========================================
SECRET_KEY=your_256_bit_secret_key_here
CORS_ORIGINS=https://mangaforge.example.com,https://www.mangaforge.example.com

# ===========================================
# Monitoring (Optional)
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# ===========================================
# Domain Configuration
# ===========================================
DOMAIN=mangaforge.example.com
API_DOMAIN=api.mangaforge.example.com
